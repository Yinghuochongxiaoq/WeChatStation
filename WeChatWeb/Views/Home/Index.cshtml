<div class="newsbox">
    @if (technologyList != null && technologyList.Count > 0)
    {
        <section>
            <div class="news">
                <h2 class="newstitle"><span><a href="@(ViewBag.RootNode)/Home/BlogHistory">更多</a></span><b>个人博客日记</b></h2>
